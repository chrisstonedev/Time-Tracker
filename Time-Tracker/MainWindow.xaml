<Window x:Name="myWindow" x:Class="Time_Tracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Time Tracker" Height="112" Width="420" ResizeMode="CanMinimize">
    <Grid>
        <TextBox x:Name="txtKey" HorizontalAlignment="Left" Height="25" Margin="60,22,0,0" TextWrapping="Wrap" Text="Key" VerticalAlignment="Top" Width="88"/>
        <TextBox x:Name="txtDescription" HorizontalAlignment="Left" Height="25" Margin="173,22,0,0" TextWrapping="Wrap" Text="Description" VerticalAlignment="Top" Width="131"/>
        <Button x:Name="btnAdd" Content="_Add" HorizontalAlignment="Left" Height="25" Margin="328,22,0,0" VerticalAlignment="Top" Width="69" IsDefault="True" Click="btnAdd_Click"/>
        <Grid x:Name="myGrid" Margin="20,60,20,20" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions/>
        </Grid>
    </Grid>
</Window>
